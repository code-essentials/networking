{
  "name": "@code-essentials/networking",
  "description": "",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prebuild:debug": "pnpm run clean",
    "build": "tsc",
    "build:debug": "tsc -p tsconfig.debug.json",
    "pretest": "pnpm run build:debug",
    "test": "pnpm run test:run",
    "keygen": "chmod +x ./scripts/keygen.sh && ./scripts/keygen.sh",
    "pretest:run": "pnpm run keygen",
    "test:run": "ava",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "dependencies": {
    "@code-essentials/utils": "catalog:",
    "socket.io-cbor-x-parser": "catalog:",
    "socket.io-client": "catalog:"
  },
  "devDependencies": {
    "@ava/typescript": "catalog:",
    "@code-essentials/tsconfig": "catalog:",
    "@code-essentials/get-port": "workspace:^",
    "ava": "catalog:",
    "bufferutil": "catalog:",
    "socket.io": "catalog:",
    "typescript": "catalog:",
    "utf-8-validate": "catalog:"
  },
  "ava": {
    "files": [
      "src/**/*.spec.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "extensions": [
        "ts"
      ],
      "compile": false
    }
  },
  "author": {
    "name": "Isaac Valdez",
    "email": "isaac_valdez@msn.com",
    "url": "https://i12345.github.io"
  }
}
